<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

   <path>panel.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>panel</object-name>
    <object-name>console</object-name>
    <object-name>volantG</object-name>
    <object-name>volantD</object-name>
    <object-name>trimprof</object-name>
    <object-name>trimail</object-name>
    <object-name>boite</object-name>

    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>select</type>
    <object-name>volantG</object-name>
    <object-name>volantD</object-name>
    <condition>
      <or>
        <not-equals>
          <property>sim/current-view/view-number</property>
          <value>0</value>
        </not-equals>
        <not>
          <property>sim/model/hide-yoke</property>
        </not>
      </or>
    </condition>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>volantG</object-name>
    <property>/surface-positions/elevator-pos-norm</property>
    <factor> -0.12 </factor>
    <axis>
      <x> 0.156735 </x>
      <y> 0.000000 </y>
      <z> 0.013713 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>volantD</object-name>
    <property>/surface-positions/elevator-pos-norm</property>
    <factor> -0.12 </factor>
    <axis>
      <x> 0.156735 </x>
      <y> 0.000000 </y>
      <z> 0.013713 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>volantG</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <factor> 60 </factor>
    <center>
      <x-m>  0.159052 </x-m>
      <y-m> -0.397167 </y-m>
      <z-m>  0.012765 </z-m>
    </center>
    <axis>
      <x> -0.313471 </x>
      <y>  0.000000 </y>
      <z> -0.027425 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>volantD</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <factor> 60 </factor>
    <center>
      <x-m> 0.159052 </x-m>
      <y-m> 0.397167 </y-m>
      <z-m> 0.012765 </z-m>
    </center>
    <axis>
      <x> -0.313471 </x>
      <y>  0.000000 </y>
      <z> -0.027425 </z>
    </axis>
  </animation>

  <!-- AI -->
