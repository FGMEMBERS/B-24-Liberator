  <!-- Left exterior -->
  <fuselage ax=" 5.232"  ay=" 7.911" az=" 0.160" bx="  1.166" by=" 7.911" bz=" 0.160" width="1.560" taper="0.8" midpoint="0.02"/>
  <!-- Left interior -->
  <fuselage ax=" 5.582"  ay=" 3.432" az=" 0.160" bx="  1.166" by=" 3.432" bz=" 0.160" width="1.560" taper="0.8" midpoint="0.02"/>

