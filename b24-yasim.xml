             moment="50"
             radius="1.73"
             min-rpm="250" max-rpm="2700"
             cruise-speed="187"
             cruise-rpm="2325"
             cruise-power="700"
             cruise-alt="13000">
             <actionpt x="5.803" y="3.432" z="0.095"/>
             <control-input axis="/controls/engines/engine[1]/propeller-pitch" control="ADVANCE"/>
             <piston-engine eng-power="1200" 
                            eng-rpm="2700"
